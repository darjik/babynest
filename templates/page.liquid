{% comment %}
  Page Template - BabyNest Kids Apparel Store
  Standard page template for static content pages (About, Contact, etc)
  Uses Shopify page object for dynamic content
  Production-ready with customizable sections
{% endcomment %}

<div class="page-template">
  <div class="container">
    <article class="page-content">
      <header class="page-header">
        <h1 class="page-title">{{ page.title }}</h1>
        {% if page.published_at %}
          <time class="page-date" datetime="{{ page.published_at | date: '%Y-%m-%dT%H:%M:%SZ' }}">
            {{ page.published_at | date: "%B %d, %Y" }}
          </time>
        {% endif %}
      </header>

      <div class="page-body">
        {{ page.content }}
      </div>
    </article>
  </div>
</div>

<style>
  .page-template {
    padding: var(--space-xxl) 0;
    background-color: var(--color-background);
    min-height: calc(100vh - 300px);
  }

  .page-header {
    margin-bottom: var(--space-xl);
    text-align: center;
  }

  .page-title {
    font-size: var(--font-size-h1);
    margin-bottom: var(--space-md);
  }

  .page-date {
    font-size: var(--font-size-body-sm);
    color: var(--color-text-secondary);
  }

  .page-body {
    max-width: 800px;
    margin: 0 auto;
    line-height: var(--line-height-relaxed);
  }

  .page-body h2 {
    font-size: var(--font-size-h2);
    margin: var(--space-xl) 0 var(--space-md) 0;
  }

  .page-body h3 {
    font-size: var(--font-size-h3);
    margin: var(--space-lg) 0 var(--space-sm) 0;
  }

  .page-body p {
    margin-bottom: var(--space-lg);
  }

  .page-body a {
    color: var(--color-primary);
    text-decoration: underline;
  }

  .page-body a:hover {
    text-decoration-thickness: 2px;
  }

  .page-body ul,
  .page-body ol {
    margin-left: var(--space-lg);
    margin-bottom: var(--space-lg);
  }

  .page-body li {
    margin-bottom: var(--space-sm);
  }

  .page-body img {
    max-width: 100%;
    height: auto;
    border-radius: var(--radius-soft);
    margin: var(--space-lg) 0;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .page-template {
      padding: var(--space-xl) 0;
    }

    .page-title {
      font-size: var(--font-size-h2);
    }
  }
</style>
