<style>
  .social-gallery {
    padding: var(--space-xxl) 0;
    background-color: var(--color-background);
  }

  .social-gallery__title {
    font-size: var(--font-size-h2);
    text-align: center;
    margin-bottom: var(--space-sm);
  }

  .social-gallery__subtitle {
    text-align: center;
    color: var(--color-text-secondary);
    margin-bottom: var(--space-xl);
    font-size: var(--font-size-md);
  }

  .social-gallery__grid {
    display: grid;
    grid-template-columns: repeat(6, 1fr);
    gap: var(--space-md);
  }

  .social-gallery__item {
    position: relative;
    overflow: hidden;
    border-radius: var(--radius-soft);
    aspect-ratio: 1;
    background-color: var(--color-background-secondary);
  }

  .social-gallery__item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .social-gallery__overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.5);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity var(--transition-base) var(--transition-timing);
  }

  .social-gallery__item:hover .social-gallery__overlay {
    opacity: 1;
  }

  .social-gallery__link {
    color: white;
    font-size: 32px;
    transition: transform var(--transition-base) var(--transition-timing);
  }

  .social-gallery__link:hover {
    transform: scale(1.2);
  }

  @media (max-width: 1024px) {
    .social-gallery__grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  @media (max-width: 768px) {
    .social-gallery__grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (max-width: 480px) {
    .social-gallery__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>
