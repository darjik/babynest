{% comment %}
  Newsletter Snippet - BabyNest Kids Apparel Store
  Email signup form for newsletter
{% endcomment %}

<section class="newsletter">
  <div class="container">
    <div class="newsletter__wrapper">
      <h2>Subscribe to Our Newsletter</h2>
      <p>Get exclusive offers, style tips, and new arrivals delivered to your inbox</p>
      
      <form class="newsletter__form" method="post" action="/contact" data-form-type="newsletter">
        <div class="newsletter__input-wrapper">
          <input 
            type="email" 
            name="email" 
            placeholder="Enter your email address"
            required
            aria-label="Email address"
          >
          <button type="submit" class="btn btn--primary">Subscribe</button>
        </div>
        <p class="newsletter__consent">
          <label>
            <input type="checkbox" name="marketing" required>
            I agree to receive marketing emails from BabyNest
          </label>
        </p>
      </form>
    </div>
  </div>
</section>

<style>
  .newsletter {
    padding: var(--space-xxl) 0;
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%);
    color: white;
  }

  .newsletter__wrapper {
    max-width: 600px;
    margin: 0 auto;
    text-align: center;
  }

  .newsletter__wrapper h2 {
    font-size: var(--font-size-h2);
    margin-bottom: var(--space-sm);
  }

  .newsletter__wrapper p {
    font-size: var(--font-size-md);
    margin-bottom: var(--space-lg);
    opacity: 0.95;
  }

  .newsletter__form {
    margin-bottom: var(--space-lg);
  }

  .newsletter__input-wrapper {
    display: flex;
    gap: var(--space-sm);
    margin-bottom: var(--space-md);
  }

  .newsletter__form input[type="email"] {
    flex: 1;
    padding: var(--space-md);
    border: none;
    border-radius: var(--radius-soft);
    font-size: var(--font-size-md);
    min-height: 44px;
  }

  .newsletter__form button {
    padding: var(--space-md) var(--space-lg);
    background-color: white;
    color: var(--color-primary);
    border: none;
    border-radius: var(--radius-soft);
    font-weight: 600;
    cursor: pointer;
    transition: all var(--transition-base) var(--transition-timing);
    min-height: 44px;
  }

  .newsletter__form button:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
  }

  .newsletter__consent {
    font-size: var(--font-size-sm);
    margin: 0;
  }

  .newsletter__consent label {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-sm);
    cursor: pointer;
  }

  .newsletter__consent input[type="checkbox"] {
    width: 18px;
    height: 18px;
    cursor: pointer;
    accent-color: white;
  }

  @media (max-width: 768px) {
    .newsletter {
      padding: var(--space-xl) 0;
    }

    .newsletter__input-wrapper {
      flex-direction: column;
    }

    .newsletter__form button {
      width: 100%;
    }
  }

  @media (max-width: 480px) {
    .newsletter__wrapper h2 {
      font-size: var(--font-size-h3);
    }

    .newsletter__wrapper p {
      font-size: var(--font-size-sm);
    }
  }
</style>
