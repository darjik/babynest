{% comment %}
  Featured Categories Snippet - BabyNest Kids Apparel Store
  Displays 3 featured product categories with images
{% endcomment %}

<section class="featured-categories">
  <div class="container">
    <h2 class="featured-categories__title">Shop by Category</h2>
    
    <div class="featured-categories__grid">
      {% for collection in shop.collections limit: 3 %}
        <a href="{{ collection.url }}" class="featured-category-card">
          <div class="featured-category-card__image">
            {% if collection.image %}
              <img src="{{ collection.image | image_url: width: 400 }}" alt="{{ collection.title }}">
            {% else %}
              <div class="featured-category-card__placeholder"></div>
            {% endif %}
          </div>
          <div class="featured-category-card__content">
            <h3>{{ collection.title }}</h3>
            <span class="featured-category-card__arrow">â†’</span>
          </div>
        </a>
      {% endfor %}
    </div>
  </div>
</section>

<style>
  .featured-categories {
    padding: var(--space-xxl) 0;
    background-color: var(--color-background);
  }

  .featured-categories__title {
    font-size: var(--font-size-h2);
    text-align: center;
    margin-bottom: var(--space-xl);
  }

  .featured-categories__grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-lg);
  }

  .featured-category-card {
    position: relative;
    border-radius: var(--radius-soft);
    overflow: hidden;
    text-decoration: none;
    transition: transform var(--transition-base) var(--transition-timing);
  }

  .featured-category-card:hover {
    transform: translateY(-4px);
  }

  .featured-category-card__image {
    width: 100%;
    padding-bottom: 100%;
    position: relative;
    background-color: var(--color-background-secondary);
    overflow: hidden;
  }

  .featured-category-card__image img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .featured-category-card__placeholder {
    width: 100%;
    height: 100%;
    background-color: var(--color-background-secondary);
  }

  .featured-category-card__content {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: var(--space-lg);
    background: linear-gradient(180deg, rgba(0,0,0,0) 0%, rgba(0,0,0,0.6) 100%);
    color: white;
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
  }

  .featured-category-card__content h3 {
    font-size: var(--font-size-h3);
    margin: 0;
  }

  .featured-category-card__arrow {
    font-size: 24px;
    opacity: 0;
    transition: opacity var(--transition-base) var(--transition-timing);
  }

  .featured-category-card:hover .featured-category-card__arrow {
    opacity: 1;
  }

  @media (max-width: 768px) {
    .featured-categories__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 480px) {
    .featured-categories__grid {
      grid-template-columns: 1fr;
    }
  }
</style>
