{% comment %}
  Products Grid Snippet - BabyNest Kids Apparel Store
  Displays featured products in responsive grid
{% endcomment %}

<section class="products-grid">
  <div class="container">
    <h2 class="products-grid__title">Featured Products</h2>
    
    <div class="products-grid__container">
      {% assign featured_collection = shop.collections.first %}
      {% for product in featured_collection.products limit: 12 %}
        {% include 'product-card' %}
      {% endfor %}
    </div>
  </div>
</section>

<style>
  .products-grid {
    padding: var(--space-xxl) 0;
    background-color: var(--color-background);
  }

  .products-grid__title {
    font-size: var(--font-size-h2);
    text-align: center;
    margin-bottom: var(--space-xl);
  }

  .products-grid__container {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--space-lg);
  }

  @media (max-width: 1024px) {
    .products-grid__container {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (max-width: 768px) {
    .products-grid__container {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 480px) {
    .products-grid__container {
      grid-template-columns: 1fr;
    }
  }
</style>
