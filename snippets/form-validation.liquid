<style>
  /* ============================================
     FORM FIELD STATES & VALIDATION STYLING
     ============================================ */

  .form-field {
    margin-bottom: var(--space-lg);
    position: relative;
  }

  .form-label {
    display: block;
    font-size: var(--font-size-body-md);
    font-weight: var(--fw-semibold);
    color: var(--color-text-primary);
    margin-bottom: var(--space-sm);
  }

  .form-label .required {
    color: #DC2626;
    margin-left: 2px;
  }

  /* Standard input styles */
  .form-input,
  .form-textarea,
  .form-select {
    width: 100%;
    padding: var(--space-sm) var(--space-md);
    font-size: 16px;
    font-family: inherit;
    border: 2px solid var(--color-border);
    border-radius: var(--radius-soft);
    background-color: var(--color-background);
    color: var(--color-text-primary);
    transition: all var(--transition-base) var(--transition-timing);
  }

  .form-input:focus,
  .form-textarea:focus,
  .form-select:focus {
    outline: none;
    border-color: var(--color-primary);
    box-shadow: 0 0 0 3px rgba(250, 173, 221, 0.1);
  }

  .form-textarea {
    resize: vertical;
    min-height: 120px;
  }

  /* Input placeholder */
  .form-input::placeholder,
  .form-textarea::placeholder {
    color: var(--color-text-secondary);
    opacity: 0.7;
  }

  /* ============================================
     VALIDATION STATES
     ============================================ */

  /* Valid state */
  .form-input[aria-invalid="false"],
  .form-textarea[aria-invalid="false"],
  .form-select[aria-invalid="false"] {
    border-color: #10B981;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 24 24' fill='none' stroke='%2310B981' stroke-width='2'%3E%3Cpolyline points='20 6 9 17 4 12'%3E%3C/polyline%3E%3C/svg%3E");
    background-repeat: no-repeat;
    background-position: right var(--space-md) center;
    background-size: 20px;
    padding-right: 40px;
  }

  /* Invalid state */
  .form-input[aria-invalid="true"],
  .form-textarea[aria-invalid="true"],
  .form-select[aria-invalid="true"] {
    border-color: #DC2626;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 24 24' fill='none' stroke='%23DC2626' stroke-width='2'%3E%3Ccircle cx='12' cy='12' r='10'%3E%3C/circle%3E%3Cline x1='12' y1='8' x2='12' y2='12'%3E%3C/line%3E%3Cline x1='12' y1='16' x2='12.01' y2='16'%3E%3C/line%3E%3C/svg%3E");
    background-repeat: no-repeat;
    background-position: right var(--space-md) center;
    background-size: 20px;
    padding-right: 40px;
  }

  /* Disabled state */
  .form-input:disabled,
  .form-textarea:disabled,
  .form-select:disabled {
    background-color: var(--color-background-secondary);
    color: var(--color-text-secondary);
    cursor: not-allowed;
    opacity: 0.6;
  }

  /* ============================================
     ERROR & SUCCESS MESSAGES
     ============================================ */

  .form-feedback {
    display: block;
    font-size: var(--font-size-body-sm);
    margin-top: 4px;
    animation: slideDown 200ms var(--transition-timing);
  }

  .form-feedback--error {
    color: #DC2626;
    font-weight: var(--fw-semibold);
  }

  .form-feedback--success {
    color: #10B981;
    font-weight: var(--fw-semibold);
  }

  .form-feedback--warning {
    color: #F59E0B;
    font-weight: var(--fw-semibold);
  }

  .form-feedback--info {
    color: var(--color-primary);
    font-weight: var(--fw-semibold);
  }

  /* ============================================
     FIELD GROUP VARIATIONS
     ============================================ */

  /* Checkbox and Radio inputs */
  .form-checkbox,
  .form-radio {
    margin-right: var(--space-sm);
    cursor: pointer;
  }

  .checkbox-group,
  .radio-group {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }

  .checkbox-item,
  .radio-item {
    display: flex;
    align-items: center;
    cursor: pointer;
    padding: var(--space-sm);
    border-radius: var(--radius-soft);
    transition: background-color var(--transition-base) var(--transition-timing);
  }

  .checkbox-item:hover,
  .radio-item:hover {
    background-color: var(--color-background-secondary);
  }

  .checkbox-item input,
  .radio-item input {
    accent-color: var(--color-primary);
  }

  .checkbox-item label,
  .radio-item label {
    margin: 0;
    margin-left: var(--space-sm);
    cursor: pointer;
  }

  /* ============================================
     ERROR SUMMARY / ALERT BOX
     ============================================ */

  .form-errors {
    display: none;
    padding: var(--space-lg);
    margin-bottom: var(--space-lg);
    background-color: #FEE2E2;
    border: 2px solid #DC2626;
    border-radius: var(--radius-soft);
    animation: slideDown 300ms var(--transition-timing);
  }

  .form-errors.visible {
    display: block;
  }

  .form-errors__title {
    font-size: var(--font-size-body-lg);
    font-weight: var(--fw-bold);
    color: #991B1B;
    margin-bottom: var(--space-md);
  }

  .form-errors__list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .form-errors__item {
    color: #991B1B;
    margin-bottom: var(--space-sm);
    display: flex;
    align-items: flex-start;
    gap: var(--space-sm);
  }

  .form-errors__item::before {
    content: '✕';
    flex-shrink: 0;
    font-weight: bold;
  }

  .form-errors__item:last-child {
    margin-bottom: 0;
  }

  /* ============================================
     SUCCESS MESSAGE
     ============================================ */

  .form-success {
    display: none;
    padding: var(--space-lg);
    margin-bottom: var(--space-lg);
    background-color: #D1FAE5;
    border: 2px solid #10B981;
    border-radius: var(--radius-soft);
    animation: slideDown 300ms var(--transition-timing);
  }

  .form-success.visible {
    display: block;
  }

  .form-success__title {
    font-size: var(--font-size-body-lg);
    font-weight: var(--fw-bold);
    color: #065F46;
    display: flex;
    align-items: center;
    gap: var(--space-sm);
  }

  .form-success__title::before {
    content: '✓';
    font-weight: bold;
  }

  /* ============================================
     FORM ROW & MULTI-COLUMN
     ============================================ */

  .form-row {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-lg);
  }

  .form-row--full {
    grid-column: 1 / -1;
  }

  /* ============================================
     RESPONSIVE DESIGN
     ============================================ */

  @media (max-width: 768px) {
    .form-row {
      grid-template-columns: 1fr;
    }

    .checkbox-group,
    .radio-group {
      gap: var(--space-sm);
    }

    .checkbox-item,
    .radio-item {
      padding: var(--space-sm) 0;
    }
  }

  /* ============================================
     FIELD INSTRUCTIONS / HINTS
     ============================================ */

  .form-instructions {
    display: block;
    font-size: var(--font-size-body-sm);
    color: var(--color-text-secondary);
    margin-bottom: var(--space-sm);
  }

  /* ============================================
     PASSWORD STRENGTH INDICATOR
     ============================================ */

  .password-strength {
    margin-top: var(--space-sm);
    padding: var(--space-sm) 0;
  }

  .password-strength__meter {
    width: 100%;
    height: 4px;
    background-color: var(--color-border);
    border-radius: 2px;
    overflow: hidden;
  }

  .password-strength__bar {
    height: 100%;
    width: 0%;
    transition: width 300ms var(--transition-timing), background-color 300ms var(--transition-timing);
  }

  .password-strength__bar.weak {
    width: 33%;
    background-color: #DC2626;
  }

  .password-strength__bar.medium {
    width: 66%;
    background-color: #F59E0B;
  }

  .password-strength__bar.strong {
    width: 100%;
    background-color: #10B981;
  }

  .password-strength__text {
    font-size: var(--font-size-body-xs);
    margin-top: 4px;
    font-weight: var(--fw-semibold);
  }

  .password-strength__text.weak {
    color: #DC2626;
  }

  .password-strength__text.medium {
    color: #F59E0B;
  }

  .password-strength__text.strong {
    color: #10B981;
  }

  /* ============================================
     LOADING STATE
     ============================================ */

  .form-submit {
    position: relative;
    min-width: 120px;
  }

  .form-submit[disabled] {
    opacity: 0.6;
    cursor: not-allowed;
  }

  .form-submit.loading {
    pointer-events: none;
  }

  .form-submit.loading::after {
    content: '';
    position: absolute;
    right: 12px;
    top: 50%;
    transform: translateY(-50%);
    width: 16px;
    height: 16px;
    border: 2px solid rgba(255, 255, 255, 0.3);
    border-top-color: white;
    border-radius: 50%;
    animation: spin 600ms linear infinite;
  }
</style>

<script>
  class FormValidator {
    constructor(formSelector = 'form') {
      this.forms = document.querySelectorAll(formSelector);
      this.init();
    }

    init() {
      this.forms.forEach(form => {
        this.setupForm(form);
      });
    }

    setupForm(form) {
      const inputs = form.querySelectorAll('[data-validate]');
      
      inputs.forEach(input => {
        input.addEventListener('blur', (e) => this.validateField(e.target));
        input.addEventListener('input', (e) => this.validateField(e.target));
      });

      form.addEventListener('submit', (e) => this.handleSubmit(e, form));
    }

    validateField(field) {
      const validationType = field.getAttribute('data-validate');
      const value = field.value.trim();
      let isValid = true;
      let errorMessage = '';

      // Skip validation if field is empty and not required
      if (value === '' && !field.hasAttribute('required')) {
        this.clearFieldError(field);
        return true;
      }

      switch (validationType) {
        case 'email':
          isValid = this.validateEmail(value);
          errorMessage = 'Please enter a valid email address';
          break;
        case 'phone':
          isValid = this.validatePhone(value);
          errorMessage = 'Please enter a valid phone number';
          break;
        case 'password':
          isValid = this.validatePassword(value);
          errorMessage = 'Password must be at least 8 characters';
          break;
        case 'password-match':
          const passwordField = document.getElementById(field.getAttribute('data-match'));
          isValid = value === passwordField.value;
          errorMessage = 'Passwords do not match';
          break;
        case 'zip':
          isValid = /^\d{5}(-\d{4})?$/.test(value);
          errorMessage = 'Please enter a valid ZIP code';
          break;
        case 'required':
          isValid = value !== '';
          errorMessage = 'This field is required';
          break;
      }

      if (!isValid) {
        this.setFieldError(field, errorMessage);
      } else {
        this.setFieldSuccess(field);
      }

      return isValid;
    }

    validateEmail(email) {
      return /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email);
    }

    validatePhone(phone) {
      return /^[\d\-\+\(\)\s]{10,}$/.test(phone.replace(/\D/g, ''));
    }

    validatePassword(password) {
      return password.length >= 8;
    }

    setFieldError(field, message) {
      field.setAttribute('aria-invalid', 'true');
      let feedback = field.parentElement.querySelector('.form-feedback');
      
      if (!feedback) {
        feedback = document.createElement('div');
        feedback.className = 'form-feedback form-feedback--error';
        field.parentElement.appendChild(feedback);
      }
      
      feedback.textContent = message;
      feedback.setAttribute('role', 'alert');
    }

    setFieldSuccess(field) {
      field.setAttribute('aria-invalid', 'false');
      const feedback = field.parentElement.querySelector('.form-feedback');
      if (feedback) {
        feedback.remove();
      }
    }

    clearFieldError(field) {
      field.setAttribute('aria-invalid', 'false');
      const feedback = field.parentElement.querySelector('.form-feedback');
      if (feedback) {
        feedback.remove();
      }
    }

    handleSubmit(e, form) {
      const fields = form.querySelectorAll('[data-validate]');
      let hasErrors = false;
      const errorsList = [];

      fields.forEach(field => {
        if (!this.validateField(field)) {
          hasErrors = true;
          errorsList.push(field.getAttribute('data-label') || field.name);
        }
      });

      if (hasErrors) {
        e.preventDefault();
        this.showErrorSummary(form, errorsList);
        this.focusFirstError(form);
      } else {
        this.clearErrorSummary(form);
        this.submitForm(form);
      }
    }

    showErrorSummary(form, errors) {
      let errorBox = form.querySelector('.form-errors');
      
      if (!errorBox) {
        errorBox = document.createElement('div');
        errorBox.className = 'form-errors';
        form.prepend(errorBox);
      }

      errorBox.innerHTML = `
        <h2 class="form-errors__title">Please fix the following errors:</h2>
        <ul class="form-errors__list">
          ${errors.map(error => `<li class="form-errors__item">${error}</li>`).join('')}
        </ul>
      `;
      errorBox.classList.add('visible');
      errorBox.setAttribute('role', 'alert');
    }

    clearErrorSummary(form) {
      const errorBox = form.querySelector('.form-errors');
      if (errorBox) {
        errorBox.classList.remove('visible');
      }
    }

    focusFirstError(form) {
      const firstInvalid = form.querySelector('[aria-invalid="true"]');
      if (firstInvalid) {
        firstInvalid.focus();
        firstInvalid.scrollIntoView({ behavior: 'smooth', block: 'center' });
      }
    }

    submitForm(form) {
      const submitBtn = form.querySelector('[type="submit"]');
      
      if (submitBtn) {
        submitBtn.classList.add('loading');
        submitBtn.setAttribute('disabled', 'disabled');
      }

      // Form submission will proceed with browser default behavior
    }
  }

  // Initialize form validation
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', () => {
      new FormValidator('form');
    });
  } else {
    new FormValidator('form');
  }

  // Password strength indicator
  function setupPasswordStrength(inputId) {
    const input = document.getElementById(inputId);
    if (!input) return;

    const container = document.createElement('div');
    container.className = 'password-strength';
    container.innerHTML = `
      <div class="password-strength__meter">
        <div class="password-strength__bar"></div>
      </div>
      <span class="password-strength__text"></span>
    `;
    input.parentElement.appendChild(container);

    input.addEventListener('input', (e) => {
      const strength = calculatePasswordStrength(e.target.value);
      const bar = container.querySelector('.password-strength__bar');
      const text = container.querySelector('.password-strength__text');

      bar.className = `password-strength__bar ${strength.level}`;
      text.className = `password-strength__text ${strength.level}`;
      text.textContent = strength.text;
    });
  }

  function calculatePasswordStrength(password) {
    let strength = 0;
    
    if (password.length >= 8) strength++;
    if (password.length >= 12) strength++;
    if (/[a-z]/.test(password) && /[A-Z]/.test(password)) strength++;
    if (/\d/.test(password)) strength++;
    if (/[^A-Za-z0-9]/.test(password)) strength++;

    if (strength < 2) return { level: 'weak', text: 'Weak' };
    if (strength < 4) return { level: 'medium', text: 'Medium' };
    return { level: 'strong', text: 'Strong' };
  }
</script>
