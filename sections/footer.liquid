      <div class="footer__bottom-right">
        <!-- Payment Methods -->
        <div class="footer__payments">
          <p class="footer__payments-label">We Accept</p>
          <div class="footer__payment-icons">
            <span class="footer__payment-icon" title="Visa">
              <svg viewBox="0 0 48 32" fill="currentColor">
                <rect width="48" height="32" rx="4" fill="#1434CB"/>
                <text x="24" y="20" text-anchor="middle" fill="white" font-size="10" font-weight="bold">VISA</text>
