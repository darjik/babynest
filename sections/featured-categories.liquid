{% comment %}
  Featured Categories Section - BabyNest Kids Apparel Store
  Visual category cards with images and dynamic content
  Production-ready with responsive grid and accessibility
{% endcomment %}

<section class="featured-categories">
  <div class="container">
    {% if section.settings.section_title %}
      <div class="featured-categories__header">
        <h2 class="featured-categories__title">{{ section.settings.section_title }}</h2>
        {% if section.settings.section_subtitle %}
          <p class="featured-categories__subtitle">{{ section.settings.section_subtitle }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="featured-categories__grid">
      {% for block in section.blocks %}
        <a 
          href="{{ block.settings.category_link }}" 
          class="category-card"
          aria-label="{{ block.settings.category_name }}"
        >
          <div class="category-card__image-wrapper">
            {% if block.settings.category_image %}
              <img 
                src="{{ block.settings.category_image | image_url: width: 400 }}"
                alt="{{ block.settings.category_name }}"
                class="category-card__image"
                loading="lazy"
              >
            {% else %}
              <div class="category-card__image-placeholder">
                <svg viewBox="0 0 100 100" fill="none" stroke="currentColor" stroke-width="2">
                  <rect x="10" y="10" width="80" height="80" rx="8"></rect>
                  <path d="M 30 60 L 50 30 L 70 60"></path>
                  <circle cx="65" cy="35" r="3"></circle>
                </svg>
              </div>
            {% endif %}
          </div>
          
          <div class="category-card__content">
            <h3 class="category-card__name">{{ block.settings.category_name }}</h3>
            <span class="category-card__arrow">â†’</span>
          </div>
        </a>
      {% endfor %}
    </div>
  </div>
</section>

<style>
  .featured-categories {
    padding: var(--space-xxl) 0;
    background-color: var(--color-background);
  }

  .featured-categories__header {
    margin-bottom: var(--space-xxl);
    text-align: center;
  }

  .featured-categories__title {
    font-size: var(--font-size-h2);
    font-weight: var(--fw-bold);
    color: var(--color-text-primary);
    margin-bottom: var(--space-md);
  }

  .featured-categories__subtitle {
    font-size: var(--font-size-body-lg);
    color: var(--color-text-secondary);
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .featured-categories__grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--grid-gap-desktop);
  }

  .category-card {
    position: relative;
    overflow: hidden;
    border-radius: var(--radius-soft);
    text-decoration: none;
    display: flex;
    flex-direction: column;
    transition: transform var(--transition-base) var(--transition-timing);
    cursor: pointer;
  }

  .category-card:hover {
    transform: translateY(-4px);
  }

  .category-card:focus {
    outline: 2px solid var(--color-primary);
    outline-offset: -2px;
  }

  .category-card__image-wrapper {
    position: relative;
    width: 100%;
    padding-bottom: 100%;
    overflow: hidden;
    background-color: var(--color-background-secondary);
    border-radius: var(--radius-soft);
  }

  .category-card__image,
  .category-card__image-placeholder {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-base) var(--transition-timing);
  }

  .category-card:hover .category-card__image {
    transform: scale(1.05);
  }

  .category-card__image-placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-text-secondary);
    background-color: var(--color-background-secondary);
  }

  .category-card__image-placeholder svg {
    width: 50%;
    height: 50%;
  }

  .category-card__content {
    padding: var(--space-lg) 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .category-card__name {
    font-size: var(--font-size-body-lg);
    font-weight: var(--fw-semibold);
    color: var(--color-text-primary);
    transition: color var(--transition-base) var(--transition-timing);
  }

  .category-card:hover .category-card__name {
    color: var(--color-primary);
  }

  .category-card__arrow {
    font-size: var(--font-size-body-lg);
    color: var(--color-primary);
    opacity: 0;
    transform: translateX(-10px);
    transition: all var(--transition-base) var(--transition-timing);
  }

  .category-card:hover .category-card__arrow {
    opacity: 1;
    transform: translateX(0);
  }

  /* Responsive Design */
  @media (max-width: 1024px) {
    .featured-categories {
      padding: var(--space-xl) 0;
    }

    .featured-categories__header {
      margin-bottom: var(--space-xl);
    }

    .featured-categories__grid {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--grid-gap-tablet);
    }

    .featured-categories__title {
      font-size: var(--font-size-h3);
    }
  }

  @media (max-width: 768px) {
    .featured-categories {
      padding: var(--space-lg) 0;
    }

    .featured-categories__header {
      margin-bottom: var(--space-lg);
    }

    .featured-categories__grid {
      grid-template-columns: 1fr;
      gap: var(--grid-gap-mobile);
    }

    .featured-categories__title {
      font-size: var(--font-size-h4);
      margin-bottom: var(--space-sm);
    }

    .featured-categories__subtitle {
      font-size: var(--font-size-body-md);
    }

    .category-card__name {
      font-size: var(--font-size-body-md);
    }
  }

  @media (max-width: 480px) {
    .featured-categories {
      padding: var(--space-lg) 0;
    }

    .category-card__content {
      padding: var(--space-md) 0;
    }

    .category-card__name {
      font-size: var(--font-size-body-sm);
    }
  }
</style>

