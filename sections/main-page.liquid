{% comment %}
  Main Page Section - Renders a generic page with title and content
{% endcomment %}

<div class="page-wrapper">
  <div class="page-header">
    <div class="container">
      <h1 class="page-title">{{ page.title }}</h1>
    </div>
  </div>

  <main id="MainContent" class="page-content">
    <div class="container">
      <div class="page-body">
        {{ page.content }}
      </div>
    </main>
  </div>
</div>

<style>
  .page-wrapper {
    background-color: var(--color-background);
    padding: var(--space-xxl) 0;
  }

  .page-header {
    padding: var(--space-xl) 0;
    text-align: center;
    background-color: var(--color-background-secondary);
  }

  .page-title {
    font-size: var(--font-size-h1);
    margin: 0;
  }

  .page-content {
    padding: var(--space-xl) 0;
  }

  .page-body {
    max-width: 800px;
    margin: 0 auto;
  }

  .page-body img {
    max-width: 100%;
    height: auto;
    display: block;
    margin: var(--space-lg) 0;
    border-radius: var(--radius-soft);
  }

  @media (max-width: 768px) {
    .page-header {
      padding: var(--space-lg) 0;
    }

    .page-title {
      font-size: var(--font-size-h2);
    }

    .page-content {
      padding: var(--space-lg) 0;
    }
  }
</style>

{% schema %}
{
  "name": "Page",
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 28
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 28
    }
  ]
}
{% endschema %}
